<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descr_molyoGo_adapter2Id"
            android:layout_below="@+id/image_molyoGo_adpter2Id"
            android:text="有华"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_molyoGo_adapter2Id"
            android:layout_below="@id/descr_molyoGo_adapter2Id"
            android:text="有华侨组成的前线是何等的脆弱"
            />

        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_below="@id/title_molyoGo_adapter2Id"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@drawable/m_share"
            android:text="查看详情"
            android:id="@+id/knowmore_molyo_adapterId"
            android:textColor="@color/item_text_color" />

        <ImageView
            android:id="@+id/image_molyoGo_adpter2Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</android.support.v7.widget.CardView>