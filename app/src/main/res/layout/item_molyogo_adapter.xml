<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_molyoGo_adpterId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/descr_molyoGo_adapterId"
            android:padding="3dp"
            android:layout_below="@+id/image_molyoGo_adpterId"
            android:text="有华侨组成的前线是何等的脆弱"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_molyoGo_adapterId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="生活"
                android:textSize="25sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                />

            <TextView
                android:id="@+id/subtitle_molyoGo_adapterId"
                android:layout_width="match_parent"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="就是这样的生活"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>