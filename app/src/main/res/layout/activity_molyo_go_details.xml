<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_molyo_go_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.gaolei.molyo.MolyoGoDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hand_textId"
        android:id="@+id/toltal_ScrollViewId"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linearLout_Details_toltalId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView_DetailsId"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/linearLayout_hand_imageId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/MyCoffee_hand_imageId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_launcher" />
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/MyCoffee_address_layoutId"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >

                <TextView
                    android:id="@+id/MyCoffee_address_text1Id"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="My Coffee"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/MyCoffee_address_text2Id"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="南山"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/MyCoffee_address_text3Id"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="人均消费20"
                    android:textSize="13sp" />
            </LinearLayout>

            <WebView
                android:id="@+id/MyCoffee_webViewId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:text="体验" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:id="@+id/MyCoffee_learnMore_textId"
                        android:textColor="#214023"
                        android:text="更多" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/MyCoffee_experience_Id"
                        >
                       <ImageView
                           android:layout_width="150dp"
                           android:layout_height="match_parent"
                           android:src="@mipmap/ic_launcher"
                           android:id="@+id/MyCoffee_experience_imageId"
                           android:adjustViewBounds="true"
                           />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="你是不是傻"
                            android:textSize="13sp"
                            android:id="@+id/MyCoffee_experience_textId"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:text="收藏者"
                 />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:id="@+id/MyCoffee_collection_layoutId"
                    >
                    <!--<ImageView-->
                        <!--android:layout_width="40dp"-->
                        <!--android:layout_height="40dp"-->
                        <!--android:padding="5dp"-->
                        <!--android:adjustViewBounds="true"-->
                        <!--android:src="@mipmap/ic_launcher"-->
                        <!--android:id="@+id/MyCoffee_collection_imageId"-->
                        <!--android:background="@drawable/cicle_shape"-->
                        <!--/>-->

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/hand_textId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#000"
        android:clickable="true"
        android:gravity="center"
        android:text="高磊"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>
