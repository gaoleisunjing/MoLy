<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
     <TextView
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:text="全部体验"
         android:gravity="center"
         android:textSize="25sp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/learnmore_imageUser_Id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/cicle_shape"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:id="@+id/learnmore_userName_Id"
            android:text="晓晓" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="150dp"
            android:gravity="center_vertical"
            android:id="@+id/learnmore_creatTime_Id"
            android:text="creatTime" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/learnmore_image_Id"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你是不是傻"
        android:gravity="center_vertical"
        android:id="@+id/learnmore_desc_Id"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="赞"
            android:clickable="true"
            android:gravity="center_vertical"
            android:id="@+id/learnmore_zan_Id"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="评论"
            android:clickable="true"
            android:gravity="center_vertical"
            android:id="@+id/learnmore_comment_Id"
            android:layout_toLeftOf="@id/learnmore_zan_Id"
            />

    </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>